// Chaos Emerald during conversion scene

//# translated(0x090f0a) end(0x090f5e)
function bool fn090f0a()
{
	D0 = objA0.subtype2c >> 1
	D1.u16 = objA0.subtype2c
	objA0.subtype2c = D0.u8
	u8[A0 + 0x3c] = u8[0x090f64 + D0.s16]
	u8[A0 + 0x3d] = u8[0x090f6c + D0.s16]

	A1 = 0xffffffb2
	D2.u8 = u8[A1 + D0.s16]
	if (D2.u8 != 0 && D2.u8 < 2)
	{
		objA0.animation.sprite = D0.u8
		D1.u16 *= 2
		u32[A0 + 0x18] = u32[0x090f74 + D1.s16]
		if (global.characters == CHARS_KNUCKLES_ALONE)
			D1.u16 += 2
		D2.u16 = u16[0x090f90 + D1.s16]
		objA0.sprite_attributes = D2.u16
		return false
	}

	A1 = 0xffff0000 + u16[A0 + 0x46]
	u8[A1 + 0x27] |= (1 << D0.u8)
	UnloadObject()
	return true
}
