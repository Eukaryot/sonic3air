	}

	objA0.update_address = 0x090a72
	objA0.countdown_value = 0x1f
	A2 = 0xffffffb2
	D1 = 2
	D2 = 0
	D3 = 6
	while (D3.s16 >= 0)
	{
		if (D1.u8 <= u8[(A2+=1)-1])
		{
			allocDynamicObjectStd()
			objA1.update_address = 0x090774
			u8[A1 + 0x2c] = D2.u8
		}
		++D2.u16
		--D3.s16
	}

	A1 = 0xffffb000
	fn090a4c()

	A1 = 0xffffb04a
	fn090a4c()
}


