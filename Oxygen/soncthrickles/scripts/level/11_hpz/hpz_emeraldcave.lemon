	{
		objA1.update_address = 0x045528
		objA1.position.x.u16 = 0x1640
		objA1.position.y.u16 = 0x03c7
		u16[A0 + 0x44] = A1.u16
	}

	if (u16[0xffffef6c] != 0)
	{
		D2 = 0
		D3 = 6
		while (D3.s16 >= 0)
		{
			allocDynamicObjectStd()
			objA1.update_address = 0x090774
			u8[A1 + 0x2c] = D2.u8
			++D2.u16
			--D3.s16
		}

		UnloadObject()
