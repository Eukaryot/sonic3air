//# address-hook(0x090c34) end(0x090ca0)
function void fn090c34()
{
	A1 = 0xffffb000
	D0.u16 = abs(s16[A1 + 0x10] - 0x1640)
	if (D0.u16 >= 8)
	{
		if (D0.u16 >= 0x18)
		{
			objA0.flags38 |= 0x08
		}
		return
	}

	if (objA0.flags38 & 0x08)
	{
		objA0.flags38 &= ~0x08
		A1 = 0xffff0000 + u16[A0 + 0x44]
		if ((u8[A1 + 0x2a] & char.flag.ON_OBJECT) && (objA0.flags38 & 0x20))
		{
