	#endif
		{
			level.scrolling_routine += 4
		}
		else
		{
			if (allocDynamicObjectStd())
			{
				objA1.update_address = 0x053a34
			}

			u32[0xffffeed2] = 0
			u32[0xffffeed6] = 0
			fn0539ac()
			fn04f2f6()

			level.scrolling_routine += 4
			fn0537ba()
			return
		}
