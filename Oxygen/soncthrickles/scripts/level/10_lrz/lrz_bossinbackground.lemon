//# address-hook(0x0792f0) end(0x079318)
function void fn0792f0()
{
	if ((u8[0xfffffab8] & 0x02) == 0)
	{
		MoveWithParent()
	}
	else
	{
		objA0.countdown_callback = 0x07931e
		MoveWithParent()
		Object.CountdownAndTrigger()
	}
	Enemy.DrawDynamicObject()
}


