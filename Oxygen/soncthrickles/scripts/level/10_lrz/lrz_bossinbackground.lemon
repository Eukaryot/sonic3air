//# address-hook(0x079290) end(0x0792a6)
function void fn079290()
{
	A1 = 0xffff0000 + u16[A0 + 0x46]
	objA0.position.x.u16 = objA1.position.x.u16
	objA0.position.y.u16 = objA1.position.y.u16
	Object.AnimationProgressByLocalA1()
	fn084920()
}



