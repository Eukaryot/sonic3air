#if STANDALONE
	if (isMainCharacter(CHARACTER_TAILS))	// Choose the right animation for Tails
		D4 = 0xffffff8a
#endif
	fn065f84()

	A1 = 0xffffb04a
	D2 = 1
	D3 = 0x3d
	D4 = 0xffffff8a
