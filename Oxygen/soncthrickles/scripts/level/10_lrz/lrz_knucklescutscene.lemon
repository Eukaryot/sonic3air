//# address-hook(0x063a6a) end(0x063a86)
function void fn063a6a()
{
	if (isMainCharacter(CHARACTER_KNUCKLES))
	{
		UnloadObject()
		return
	}

	// Targets:
	//  - 0x063a96	-> objA0.base_state = 0x00
	//  - 0x063aca	-> objA0.base_state = 0x02
	//  - 0x063ae8	-> objA0.base_state = 0x04
	//  - 0x063b10	-> objA0.base_state = 0x06
	//  - 0x063b20	-> objA0.base_state = 0x08
	call tableLookupAddress(0x063a8c, objA0.base_state)

	fn0661e0()
	DrawObject()
}


