				}
			#if STANDALONE
				// Make sure the screen mover gets stopped (in case it is active here), as it may mess up things here
				screenmover_target.right = move_area.right
			#endif
				return
			}
		}

		A1 += 12
		++A5
		D2.u16 += 4
		--D3.s16
	}
}


