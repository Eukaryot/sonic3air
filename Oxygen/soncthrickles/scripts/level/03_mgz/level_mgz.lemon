//# address-hook(0x23c970) end(0x23c9cc)
function void UpdateBackground.MGZ1()
{
	camera.background.y.u16 = camera.screenshake.offset
	D0.u16 = camera.foreground.x.u16
	D0 <<= 16
	D0.s32 >>= 2
	D1 = D0
	D1.s32 >>= 4

	A1 = 0xffffa81c
	D2 = 8
	while (D2.s16 >= 0)
	{
		u16[A1-=2] = D0 >> 16
		D0 -= D1
		--D2.s16
	}

	A1 = 0xffffa800
	D2 = u32[0xffffa81c]
	u32[0xffffa81c] += 0x0500
	D0.s32 >>= 1
	D3 = 4
	while (D3.s16 >= 0)
	{
		D0 += D2
		D2 += 0x0500
		u16[(A1+=2)-2] = D0 >> 16
		D0 += D1
		--D3.s16
	}

	D0.u16 = u16[A1 - 0x02]
	u16[A1 - 0x02] = u16[A1 - 0x04]
	u16[A1 - 0x04] = D0.u16
}



