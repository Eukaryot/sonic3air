	--objA0.animation.timer
	if (s8(objA0.animation.timer) < 0)
	{
		objA0.animation.timer = 2
		D0.u8 = objA0.animation.sprite + 1
		if (D0.u8 >= 7)
			D0 = 3
		objA0.animation.sprite = D0.u8
	}
	fn01fcae()
}


