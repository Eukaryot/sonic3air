	{
		D0 = 0x48
		while (D0.s16 >= 0)
		{
			u16[A1 + D0.s16] = u16[A0 + D0.s16]
			D0.u16 -= 2
		}

		u32[A1 + 0x44] = objA0.update_address
		objA1.update_address = 0x01fcf2
		u8[A1 + 0x22] = 0x07
		D0 = 0
	}
}


//# address-hook(0x01fcf2) end(0x01fd02)
