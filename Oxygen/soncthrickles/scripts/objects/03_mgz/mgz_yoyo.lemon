	{
		D0.u16 = 0x30
		D1 = 7
	}
	else
	{
		++u16[A1 + 0x16]
	}

	D3.u16 += D0.u16
	D0.u16 >>= 1
	D2.u16 += D0.u16 * sign
	while (D1.s16 >= 0)
	{
		u16[(A2+=2)-2] = D2.u16
		u16[(A2+=2)-2] = D3.u16
		u16[(A2+=2)-2] = 5
		D2.u16 += 0x18 * sign
		D3.u16 += 0x30
		--D1.s16
	}

	u16[A2 - 0x02] = 6
}


