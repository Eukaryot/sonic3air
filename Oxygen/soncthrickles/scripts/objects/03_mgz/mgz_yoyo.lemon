function void fn0349ba()
{
	if (u8[A2] != 0)
	{
		if ((objA1.render_flags & render_flag.VISIBLE) && u8[A1 + 0x05] < 0x04)
		{
			if ((D0.u8 & CONTROL_ABC) == 0)
			{
				D2.u16 = objA0.position.x.u16 - 0x26
				D3.u16 = objA0.position.y.u16 + 0x2e
				D0.u16 = u16[A0 + 0x3c]
				D3.u16 += D0.u16
				D0.u16 >>= 1
				if (objA0.flags2a & 0x01)
				{
					D2.u16 += 0x4c
					D0.s16 = -D0.s16
				}
				D2.u16 -= D0.u16
				objA1.position.x.u16 = D2.u16
				objA1.position.y.u16 = D3.u16
				return
			}

			// Jump off
			objA1.velocity.x = (objA0.flags2a & 0x01) ? 0x400 : -0x400
			objA1.velocity.y = -0x600
			u8[A1 + 0x1e] = 0x0e
			u8[A1 + 0x1f] = 0x07
			u8[A1 + 0x20] = 0x02
			objA1.flags2a |= (char.flag.IN_AIR | char.flag.ROLLING)

			#if STANDALONE
				// Set jump flag to allow for immediate mid-jump action
				u8[A1 + 0x40] = 1
			#endif
		}

		u8[A1 + 0x2e] = 0
		u8[A2] = 0
		u8[A2 + 0x02] = 0x3c
	}
	else
	{
		if (u8[A2 + 0x02] != 0)
		{
			--u8[A2 + 0x02]
			if (u8[A2 + 0x02] != 0)
			{
				return
			}
		}

		D2.u16 = objA0.position.x.u16 - 0x26
		D3.u16 = objA0.position.y.u16 + 0x2e
		D0.u16 = u16[A0 + 0x3c]
		D3.u16 += D0.u16
		D0.u16 >>= 1
		if (objA0.flags2a & 0x01)
		{
			D2.u16 += 0x4c
			D0.s16 = -D0.s16
		}
		D2.u16 -= D0.u16

		D0.u16 = objA1.position.x.u16 - D2.u16 + 0x0c
		D1.u16 = objA1.position.y.u16 - D3.u16 + 0x0c
		if (D0.u16 < 0x18 && D1.u16 < 0x18)
		{
			if (u8[A1 + 0x2e] == 0 && u8[A1 + 0x05] < 0x04 && debug_mode.state == 0)
			{
				D0.u16 = objA1.velocity.x
				if (objA0.flags2a & 0x01)
					D0.s16 = -D0.s16

				if (D0.s16 < 0)
				{
					objA1.velocity.x = 0
					objA1.velocity.y = 0
					u16[A1 + 0x1c] = 0
					objA1.position.x.u16 = D2.u16
					objA1.position.y.u16 = D3.u16
					u8[A1 + 0x20] = 0x0b
					u8[A1 + 0x2e] = 0x01
					if (objA0.flags2a & 0x01)
						u8[A1 + 0x2a] |= 0x01
					else
						u8[A1 + 0x2a] &= ~0x01
					u16[A0 + 0x34] = 0x10
					u8[A2] = 1

					playSound(0x64)
				}
			}
		}
	}
}


