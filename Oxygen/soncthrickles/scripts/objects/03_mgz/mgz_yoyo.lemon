	u16[A1 + 0x16] = D0.u16
	D1.u16 = D0.u16
	A2 = A1 + 0x18
	D2.u16 = objA0.position.x.u16 + 0x0c * sign
	D3.u16 = objA0.position.y.u16 - 0x08
	D0 = (D0 << 16) + (D0 >> 16)
