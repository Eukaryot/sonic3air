#if STANDALONE
	constant u8 DataSelect.CONTROLS_ACCEPT = 0xc0		// = CONTROL_START | CONTROL_A		-> Excluding CONTROL_C, which is is [X] on an Xbox Controller, or Square on a PlayStation controller
	constant u8 DataSelect.CONTROLS_CANCEL = 0x10		// = CONTROL_B
#else
	constant u8 DataSelect.CONTROLS_ACCEPT = 0xe0		// = CONTROL_START | CONTROL_A | CONTROL_C
	constant u8 DataSelect.CONTROLS_CANCEL = 0x10		// = CONTROL_B
#endif


//# address-hook(0x00c006) end(0x00c028)
function void fn00c006()
{
	A3 = A1
	Kosinski.decompress(A0, A1)

	D1 = A3 & 0xffffff
	D3 = (A1 - A3) >> 1
	D2.u16 = A2.u16

	A3 = A1
	UpdateSpritePattern()
	A1 = A3
}


