		A1 = 0x0809ee + D0.u8
		objA0.value42 += s8[(A1+=1)-1]
		u16[A0 + 0x44] += s8[(A1+=1)-1]

		D2 = 0
		fn08106e()
	}
	else
	{
		objA0.update_address = 0x0809f4
		objA0.position.y.u16 = 0xcf
		objA0.animation.frame = 0
		objA0.countdown_value = 0x02
		fn080a26()

		D2 = 2
		fn08106e()

		signalMultiReturn()
	}
}



