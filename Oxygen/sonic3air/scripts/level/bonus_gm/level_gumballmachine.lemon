//# address-hook(0x239baa) end(0x239bd4)
function void fn239baa()
{
	D2.u16 = u16[A4]
	A4 += 2

	for (u8 i = 0; i < 0x20; ++i)
	{
		while (D2.u16 <= D0.u16)
		{
			D2.u16 += u16[A4]
			A4 += 2
			A5 += 4
		}

		D1.u16 = u16[A5]
		D6 = 0x10

		push(A5)
		push(A4)
		push(A0)
		push(D2)
		push(D0)

		fn239864()
		fn239618()

		D0 = pop()
		D2 = pop()
		A0 = pop()
		A4 = pop()
		A5 = pop()

		D0.u16 += 0x10
	}
}


