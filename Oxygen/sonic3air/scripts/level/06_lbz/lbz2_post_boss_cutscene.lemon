//# address-hook(0x072d24) end(0x072d52)
function void fn072d24()
{
	objA0.update_address = 0x072d5a
	objA0.position.x.u16 = 0x4430
	objA0.position.y.u16 = 0x0728
	u16[A0 + 0x3a] = 0x1010
