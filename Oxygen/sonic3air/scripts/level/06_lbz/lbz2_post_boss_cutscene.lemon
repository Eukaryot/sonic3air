		objA0.update_address = 0x072c9e
		objA0.countdown_callback = 0x072cbe

		A1 = 0xffffb000
		u8[A1 + 0x2e] = 0x83
		u8[A1 + 0x24] = 0
		u8[A1 + 0x23] = 0

		A1 = 0xffffb04a
		objA0.state = 0
		u8[A1 + 0x2e] = 0x83
		u8[A1 + 0x24] = 0
		u8[A1 + 0x23] = 0
	}
}


