//# address-hook(0x04eed8) end(0x04ef3a)
function void LoadTileContentInDirY.LBZ1()
{
	D1.u16 = D6.u16
	while (true)
	{
		D6.u16 -= u16[A4]
		A4 += 2
		if (D6.s16 < 0)
			break

		u16[A6+2] = u16[A6] & level.height.tilemask
		A6 += 4
		--D5.u16
	}

	u32 screenColumns = (getScreenWidth() + 31) / 16
	D6.s16 = -D6.s16
	D6.u16 >>= 4
	D4 = screenColumns - D6.u16
	if (D4.s16 < 0)
	{
		D4 = 0
		D6 = screenColumns
	}

	while (true)
	{
		u32 backupA4 = A4
		u32 backupA6 = A6
		u16 backupD1 = D1.u16
		u16 backupD4 = D4.u16
		u16 backupD5 = D5.u16
		u16 backupD6 = D6.u16

		// LoadTileContentInDirY expects:
		//  - A5 = address of old scroll offset
		//  - A6 = address of new scroll offset
		//  - D6 = number of columns to load
		A5 = A6 + 2
		LoadTileContentInDirY()

		A4 = backupA4
		A6 = backupA6
		D1.u16 = backupD1
		D4.u16 = backupD4
		D5.u16 = backupD5
		D6.u16 = backupD6

		A6 += 4
		if (D4.u16 == 0)
			break

		D1.u16 += D6.u16 << 4
		D6.u16 = u16[A4] >> 4
		A4 += 2
		--D5.u16
		D0.u16 = D4.u16
		D4.u16 -= D6.u16
		if (D4.s16 < 0)
		{
			D6.u16 = D0.u16
			D4 = 0
		}
	}

	while (true)
	{
		--D5.u16
		if (D5.u16 == 0)
			break

		u16[A6+2] = u16[A6] & level.height.tilemask
		A6 += 4
	}
}


