	D0.u16 = u16[A3 - 0x08] - 4
	D1 = 0x0b
	while (D1.s16 >= 0)
	{
		u32[(A1+=4)-4] = 0
		A1.u16 += D0.u16
		--D1.s16
	}

	A5 = 0xffff0000 + u16[A3] + 0x98
	A1 = 0xffff0000 + u16[A3 + 0x24] + 0x74
	D0.u16 = u16[A3 - 0x08] - 4
	D1 = 2
	while (D1.s16 >= 0)
	{
		u32[(A1+=4)-4] = u32[(A5+=4)-4]
		A5.u16 += D0.u16
		A1.u16 += D0.u16
		--D1.s16
	}

	u8[0xffffeed4] = 0xff
}


//# address-hook(0x054146) end(0x054162)
function void fn054146()
{
	D2 = 0x17
	while (D2.s16 >= 0)
	{
		A1 = 0xff6e00
		A5 = A1 - 2
		D0.u16 = u16[A5]

		D1 = 0x3e
		while (D1.s16 >= 0)
		{
			u16[A1-=2] = u16[A5-=2]
			--D1.s16
		}

		u16[A5] = D0.u16
		--D2.s16
