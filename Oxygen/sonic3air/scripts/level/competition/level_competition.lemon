//# address-hook(0x23a7ba) end(0x23a7ce)
function void fn23a7ba()
{
	D0.s16 = -D0.s16
	D0 = (D0 << 16) + (D0 >> 16)
	D1.s16 = -D1.s16
	D0.u16 = D1.u16
	while (D2.s16 >= 0)
	{
		u32[(A1+=4)-4] = D0
		u32[(A1+=4)-4] = D0
		u32[(A1+=4)-4] = D0
		u32[(A1+=4)-4] = D0
		--D2.s16
	}
}



