//# address-hook(0x23a808) end(0x23a81c)
function void fn23a808()
{
	D0.u16 -= 0x0148
	D0 = (D0 << 16)
	D1 = D0.s32 >> 2
	D0 -= D1
	D0 = (D0 << 16) + (D0 >> 16)
	D0.u16 += 0x48
}


//# address-hook(0x23a81e) end(0x23a88c)
function void fn23a81e()
{
	D0 = (D0.s32 << 16) >> 1
	u32[A1 + 0x90] = D0
	D0.s32 >>= 3
	A5 = A1 + 0x0c
	D1 = D0.s32 >> 2
	D2 = D1
	D3 = u32[0xffffeed4]
	D4 = 5
	while (D4.s16 >= 0)
	{
		D1 += D3
		u16[A5-=2] = D1 >> 16
		D1 += D2
		--D4.s16
	}

	D1.u16 = u16[A5+0]
	D2.u16 = u16[A5+2]
	D3.u16 = u16[A5+4]
	D4.u16 = u16[A5+6]
	D5.u16 = u16[A5+8]
	D6.u16 = u16[A5+10]
	u16[(A5+=2)-2] = D2.u16
	u16[(A5+=2)-2] = D6.u16
	u16[(A5+=2)-2] = D1.u16
	u16[(A5+=2)-2] = D4.u16
	u16[(A5+=2)-2] = D3.u16
	u16[A5] = D5.u16

	A5 = A1 + 0x0c
	D1 = D0
	D2 = D1
	D2.s32 >>= 1
	D3 = 2
	while (D3.s16 >= 0)
	{
		u16[(A5+=2)-2] = D1 >> 16
		D1 += D2
		--D3.s16
	}

	D1.u16 = (level.display_routine >> 3) & 0x3e
	A6 = A4 + D1.s16
	D0 = (D0 << 16) + (D0 >> 16)
	D1 = 0x3e
	while (D1.s16 >= 0)
	{
		D2.u16 = u16[(A6+=2)-2]
		D2.u16 += D0.u16
		u16[(A5+=2)-2] = D2.u16
		--D1.s16
	}
}


