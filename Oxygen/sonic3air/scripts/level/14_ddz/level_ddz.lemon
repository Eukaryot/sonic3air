	{
		D0 = objA0.position.y
		D1.u16 = camera.position.y.u16
		D3.s32 = D3.s16
		D3 <<= 8
		D0 += D3
		D0 = (D0 << 16) + (D0 >> 16)
		D4.u16 = level.bossarea.top
		D1.u16 += D4.u16
		if (D0.u16 >= D1.u16)
		{
			D5.u16 = level.bossarea.bottom - D4.u16
			D1.u16 += D5.u16
			if (D0.u16 < D1.u16)
			{
				D0 = (D0 << 16) + (D0 >> 16)
				objA0.position.y = D0
			}
		}
