		D2.s32 = D2.s16
		D2 <<= 8
		D0 += D2
		D0 = (D0 << 16) + (D0 >> 16)
		D4.u16 = level.bossarea.left
		D1.u16 += D4.u16
		if (D0.u16 >= D1.u16)
		{
