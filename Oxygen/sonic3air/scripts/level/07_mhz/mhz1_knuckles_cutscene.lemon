	spawnSimpleChildObjects(0x061d4c, 1)		// Cutscene Knuckles
	if (_equal())
	{
		objA1.subtype2c = 0x1c
	}

	fn062e92()
}


//# address-hook(0x062e92) end(0x062eca)
