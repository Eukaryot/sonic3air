	if ((objA0.flags2a & (object.flag.P1_ON_OBJECT | object.flag.P2_ON_OBJECT)) == 0)
	{
		objA0.update_address = 0x062f0a
		objA0.animation.sprite = 0
	}
	Object.DrawOrUnload()
}



