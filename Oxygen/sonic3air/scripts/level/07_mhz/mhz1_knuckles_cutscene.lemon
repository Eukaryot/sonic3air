//# address-hook(0x062f0a) end(0x062f46)
function void fn062f0a()
{
	fn065dec()

	if (objA0.flags2a & (object.flag.P1_ON_OBJECT | object.flag.P2_ON_OBJECT))
	{
		objA0.update_address = 0x062f4c
		objA0.animation.sprite = 1
		playSound(SFX_CLICK)

		if ((objA0.flags38 & 0x04) == 0)
		{
			objA0.flags38 |= 0x02
			u8[0xfffffaa9] ^= 0xff
			playSound(SFX_CLICK)
		}
	}

	Object.DrawOrUnload()
}


