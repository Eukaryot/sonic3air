//# address-hook(0x062d70) end(0x062da6)
function void fn062d70()
{
	u8[0xfffffab8] = 0
	player1.control_override = 0
	player2.control_override = 0
	player1.camera_lock = 0
	control.player1 = 0
	control.tails = 0
	u8[0xffffb04a + 0x20] = char.state.STANDING

