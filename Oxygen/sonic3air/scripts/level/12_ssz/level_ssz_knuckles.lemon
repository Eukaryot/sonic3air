function void fn07cd82()
{
	D0.s16 = s8(objA0.value3a)
	A1 = 0xffff0000 + u16[A0 + 0x46]
	D1.u16 = objA1.position.y.u16 + D0.u16
	A1 = 0xffffb000
	D2.u16 = objA1.position.y.u16 - 0x10 - D1.u16
	if (D2.s16 < 0)
	{
		D2 = 0
	}
	u8[A0 + 0x1a] = D2.u8
	D0.u8 += D2.u8
	if (D0.s8 < 0)
	{
		D0.u8 = 0x7f
	}
	u8[A0 + 0x43] = D0.u8

