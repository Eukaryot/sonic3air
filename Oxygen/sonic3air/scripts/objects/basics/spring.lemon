	if (global.zone == 0x02 || global.zone == 0x07)
	{
		objA0.sprite_attributes = 0x0478
	}
	if (flipY)
	{
		objA0.flags2a |= 0x02
		objA0.update_address = addressof(SpringDiagonalFlipped.Update)
