//# address-hook(0x0829a0) end(0x0829d0)
function void fn0829a0()
{
	D0 = u32[0xfffffa82] + s32[0xfffffa8a]
	if (D0 <= 0x060000)
	{
		u32[0xfffffa82] = D0
	}
	D1 = u32[0xfffffa86]
	D2 = D1
	D1 += D0
	u32[0xfffffa86] = D1
	D0 = (D0 << 16) + (D0 >> 16)
	u16[0xffffeed8] += D0.u16
	D1 = (D1 << 16) + (D1 >> 16)
	D2 = (D2 << 16) + (D2 >> 16)
	D1.u16 -= D2.u16
	u16[0xfffffa90] = D1.u16
}



//# address-hook(0x082a82) end(0x082aa4)
function void fn082a82()
{
	if (global.framecounter.low & 0x03)
	{
		// Rotate towards player
		A1 = A0
		A2 = 0xffffb000
		fn08622c()

		D0.u8 -= u8[A0 + 0x3c]
	#if STANDALONE
		if (D0.s8 == 0)
			return
	#endif
		D1.s16 = (D0.s8 < 0) ? -2 : 2
		u8[A0 + 0x3c] += D1.u8
	}
}


