	{
		D0.u8 &= object.flag.P2_ON_OBJECT
		if (D0.u8 != 0)
		{
			D0.u8 = u8[A0 + 0x3f] - objA0.value3b
			if (D0.u8 != 0)
			{
				u8[A0 + 0x3f] += (D0.s8 < 0) ? 1 : -1
			}
		}
		if (u8[A0 + 0x3e] != 0x40)
		{
			u8[A0 + 0x3e] += 4
		}
		fn038cc2()
	}

	D1 = objA0.subtype2c * 8 + 8
	D2.u16 = objA0.subtype2c * 16
	D3 = 8
	D4.u16 = objA0.position.x.u16
	fn038a88()
