//# address-hook(0x038aa2)
function void fn038aa2()
{
#if STANDALONE
	if (A1 == 0xffffb000 && debug_mode.state)
		return
#endif

	u8 bit = (1 << D6.u8)
	if (objA0.flags2a & bit)
	{
		if ((u8[A1 + 0x2a] & char.flag.IN_AIR) == 0)
		{
			D0 = objA1.position.x.u16 - objA0.position.x.u16 + D1.u16
			if (D0.s16 >= 0 && D0.u16 < D2.u16)
			{
				D0.u16 >>= 4
				u8[A0 + D5.s16] = D0.u8
				A2 = u32[A0 + 0x30]
				if (D0.u16 >= 8)
				{
					A2 = objA0.countdown_callback
					D0.u16 -= 8
				}
				D0.u16 = u16[A2 + D0.s16 * 6 + 0x1a] - 8
				D1 = u8[A1 + 0x1e]
				D0.u16 -= D1.u16
				objA1.position.y.u16 = D0.u16
				D4 = 0
				return
			}
		}

		objA1.flags2a &= ~char.flag.ON_OBJECT
		objA0.flags2a &= ~bit
		D4 = 0
	}
	else
	{
		u16 backupD1 = D1.u16
		fn01e410()
		D1.u16 = backupD1

		if (objA0.flags2a & bit)
		{
			D0 = objA1.position.x.u16 - objA0.position.x.u16 + D1.u16
			D0.u16 >>= 4
			u8[A0 + D5.u16] = D0.u8
		}
	}
}


//# address-hook(0x038cc2) end(0x038d72)
function void fn038cc2()
{
	D0.u8 = u8[A0 + 0x3e]
	LookupSinCos()
	D4.u16 = D0.u16
	A4 = 0x038eba
	D0 = objA0.subtype2c * 16
	D3 = u8[A0 + 0x3f]
	D2.u16 = D3.u16
	D3.u16 += D0.u16
	A5 = 0x038daa
	D5 = u8[A5 + D3.s16]
	D3.u16 &= 0x0f
	D3.u16 <<= 4
	A3 = A4 + D3.s16
	A1 = u32[A0 + 0x30] + 0x1a
	A2 = u32[A0 + 0x30] + 0x4a

	while (D2.s16 >= 0)
	{
		D0 = u8[(A3+=1)-1] + 1
		D0 = u32(D0.u16) * D5.u16
		D0 = u32(D0.u16) * D4.u16
		D0 = (D0 << 16) + (D0 >> 16)
		D0.u16 += u16[A0 + 0x3c]
		u16[A1] = D0.u16
		A1 += 6
		if (A1.u16 == A2.u16)
		{
			A1 = objA0.countdown_callback + 0x1a
		}
		--D2.s16
	}

	D0 = objA0.subtype2c
	D3 = u8[A0 + 0x3f] + 1
	D3.u8 = D0.u8 - D3.u8
	if (D3.s8 >= 0)
	{
		D2.u16 = D3.u16
		D3.u16 <<= 4
		A3 = A4 + D3.s16
		A3.u16 += D2.u16
		--D2.u16
		while (D2.s16 >= 0)
		{
			D0 = u8[A3-=1]
			++D0.u16
			D0 = u32(D0.u16) * D5.u16
			D0 = u32(D0.u16) * D4.u16
			D0 = (D0 << 16) + (D0 >> 16)
			D0.u16 += u16[A0 + 0x3c]
			u16[A1] = D0.u16
			A1 += 6
			if (A1.u16 == A2.u16)
			{
				A1 = objA0.countdown_callback + 0x1a
			}
			--D2.s16
		}
	}
}


