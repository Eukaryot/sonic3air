		D0.u16 = objA1.position.x.u16 - objA0.position.x.u16 + D1.u16
		if (D0.s16 >= 0 && D0.u16 < D2.u16)
		{
			D0.u16 >>= 4
			D3.u16 = 8 - D0.u16 * 3
			D0.u16 = objA0.position.y.u16 - D3.u16
			fn01e45a()
		}
	}
}


