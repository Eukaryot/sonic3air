	{
		--objA0.value3a
		if (s8[A0 + 0x3a] < 0)
		{
			if (u8[A0 + 0x35] == 3)
			{
				if (s8[A0 + 0x3e] < 0)
				{
					objA0.groundspeed = -objA0.groundspeed
				}
