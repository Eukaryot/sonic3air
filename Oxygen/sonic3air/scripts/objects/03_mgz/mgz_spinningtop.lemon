		}
		else
		{
			D3.u8 += 0x30
			if (D3.u8 >= 0x60)
			{
				objA0.velocity.x += D1.u16
				objA0.velocity.y = 0
				objA0.groundspeed = 0
				if ((objA0.flags2a & 0x01) == 0)
				{
