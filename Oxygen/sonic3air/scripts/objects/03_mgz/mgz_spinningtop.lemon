	}
	else
	{
		u16[A0 + 0x3c] += D1.u16
		if (u16[A0 + 0x3c] < objA0.countdown_value)
			return
	}

	u8[A0 + 0x35] = 3
	A2 = u32[A0 + 0x36]
	D4.u16 = u16[(A2+=2)-2]
	D5.u16 = u16[(A2+=2)-2]
	D2.u16 = abs(objA0.groundspeed)
	if (D2.u16 == 0)
	{
		D2.u16 = 0x0800
	}
	fn035706()
}



