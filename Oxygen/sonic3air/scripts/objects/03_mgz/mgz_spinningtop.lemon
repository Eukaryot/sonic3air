	D1 = (D0.u16 == 0x0c00) ? 3 : 2

	D0.u8 = u8[A0 + 0x3f] & 0x7f
	if (D0.u8 != 0)
	{
		u16[A0 + 0x3c] -= D1.u16
		if (s16[A0 + 0x3c] > 0)
