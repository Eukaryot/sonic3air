	VDP.writeData16(u16[(A1+=2)-2])
	VDP.writeData16(u16[(A1+=2)-2])

#if !STANDALONE
	set_status_register(0x2300)
#endif
}



// Preparation of remaining continues display

//# address-hook(0x05cb1c) end(0x05cb48)
function void fn05cb1c()
{
	D0 = continues_counter
	if (D0.u8 == 0 || D0.u8 > 10)
	{
		D0 = 10
	}

	A1 = 0xffffb172
	D1 = 0
	while (D0.u8 > 1)
	{
		objA1.update_address = 0x05ca1a
		u8[A1 + 0x2c] = D1.u8
		D1.u16 += 2
		A1 += 0x4a
		--D0.u8
	}
}


