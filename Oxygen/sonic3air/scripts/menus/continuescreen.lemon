	A1 = 0xffff2000
	u16[(A1+=2)-2] = D0.u16 + 1
	u16[(A1+=2)-2] = D1.u16 + 1
	u16[(A1+=2)-2] = D0.u16 + 2
	u16[(A1+=2)-2] = D1.u16 + 2

#if !STANDALONE
	set_status_register(0x2700)
#endif

	A1 = 0xffff2000
	VDP.setupVRAMWrite(0xc726)
	VDP.writeData16(u16[(A1+=2)-2])
	VDP.writeData16(u16[(A1+=2)-2])
