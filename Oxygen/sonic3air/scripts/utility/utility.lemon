//-------------------------------------------------------//
// Handling of "multiple returns" (like "A7 += 4")       //
//-------------------------------------------------------//

global u8 _multiReturnCounter

function bool checkForMultiReturn()
{
	if (_multiReturnCounter > 0)
	{
		--_multiReturnCounter
		return true
	}
	else
	{
		return false
	}
}

function void signalMultiReturn()
{
	++_multiReturnCounter
}



