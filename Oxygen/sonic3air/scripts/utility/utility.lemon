function void Renderer.configureHInt()
{
	#if !STANDALONE
	{
		// This usually configures H-INT by setting VDP register 0x0a
		//  -> h_int.configuration == 0x8a## where ## is the h-int line
		u16[0xc00004] = h_int.configuration
	}
	#endif
}



